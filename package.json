{
  "name": "2026.01.shiyao.koa",
  "version": "1.0.0",
  "description": "Koa backend with frontend client",
  "main": "server/src/index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "server": "node server/src/index.js",
    "server:dev": "nodemon server/src/index.js",
    "client": "live-server client/public",
    "build": "echo 'Build completed'",
    "start:prod": "node server/src/index.js"
  },
  "dependencies": {
    "koa": "^3.1.1",
    "koa-router": "^14.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "live-server": "^1.2.2"
  }
}